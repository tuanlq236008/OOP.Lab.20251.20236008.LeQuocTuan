<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.TitledPane?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>

<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" 
            prefHeight="480.0" prefWidth="640.0" 
            xmlns="http://javafx.com/javafx/25" 
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="hust.soict.ict.javafx.PainterController">

   <padding>
      <Insets bottom="8.0" left="8.0" right="8.0" top="8.0" />
   </padding>

   <left>
      <VBox spacing="8.0" BorderPane.alignment="CENTER">

         <BorderPane.margin>
            <Insets right="8.0" />
         </BorderPane.margin>

         <children>

            <TitledPane animated="false" text="Tools">
                <content>

                    <AnchorPane prefWidth="73.0">

                        <children>


                            <ToggleGroup fx:id="toolsGroup"/>

                            <RadioButton fx:id="pen"
                                         layoutX="6.0" layoutY="4.0"
                                         toggleGroup="$toolsGroup"
                                         onAction="#handlePen"
                                         selected="true"
                                         text="Pen"/>

                            <RadioButton fx:id="eraser"
                                         layoutX="6.0" layoutY="26.0"
                                         toggleGroup="$toolsGroup"
                                         onAction="#handleEraser"
                                         text="Eraser"/>

                        </children>

                    </AnchorPane>

                </content>
            </TitledPane>

            <Button text="Clear" onAction="#ClearButtonPressed"/>

         </children>

      </VBox>
   </left>

   <center>
      <Pane fx:id="drawingAreaPane"
            prefHeight="200.0" prefWidth="200.0"
            style="-fx-background-color: white;"
            onMousePressed="#drawingAreaMousePressed"
            onMouseDragged="#drawingAreaMouseDragged"
            onMouseReleased="#drawingAreaMouseReleased"
            onMouseExited="#drawingAreaMouseReleased"/>
   </center>

</BorderPane>
